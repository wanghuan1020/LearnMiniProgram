<!--pages/input/input.wxml-->
<text>pages/input/input.wxml</text>
<!-- 1.input基本使用 -->
<input />

<!-- 2.value: input中的默认值 -->
<input value="哈哈哈" />

<!-- 3.type: 决定键盘类型（英文字母+其他符号 | 数字 | 身份证） -->
<input type="number" />

<!-- 4.password：暗文 -->
<input password />

<!-- 5.placeholder：占位文字 -->
<input placeholder="请输入内容" />

<!-- 6.input绑定事件 -->
<input 
  bindinput="handleInput"
  bindblur="handleBlur"
  bindfocus="handleFocus"
/>
