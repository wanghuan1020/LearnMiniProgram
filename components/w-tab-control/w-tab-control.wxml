<!--components/w-tab-control/w-tab-control.wxml-->
<view class="tab-control">
	<view 
    class="tab-item {{currentIndex === index ? 'active' : ''}}" 
    wx:for="{{titles}}" 
    wx:key="index"
    bind:tap="handleItemClick"
    data-index="{{index}}"
  >
    <text class="text">{{item}}</text>
  </view>
</view>
